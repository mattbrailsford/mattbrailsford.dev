---
import { getCollection } from "astro:content";
import PostLink from "../../components/PostLink.astro";
import {SITE_DESCRIPTION, SITE_TITLE} from "../../consts";
import Layout from "../../layouts/Default.astro";

interface Params {
    tag: string 
}

export  const getStaticPaths = (async () => {
    const posts = await getCollection('blogPosts');
    const tags = [...new Set(posts.flatMap(post => post.data.tags))];
    return tags.map(tag => ({
        params: {
            tag
        }
    }))
});

const { tag } = Astro.params as Params;
const posts = await getCollection('blogPosts', (post) => post.data.tags.includes(tag));
---
<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <h1 class="halftone font-display text-3xl text-black font-bold mb-2 md:text-6xl md:leading-[1.2]">#{tag}</h1>
    <ul>
        {posts.map(post => (
            <li class="py-8 border-b">
                <PostLink post={post.data} />
            </li>
        ))}
    </ul>
</Layout>