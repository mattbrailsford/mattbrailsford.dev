---
import BaseHead from '../components/BaseHead.astro';

import { SITE_TITLE } from '../consts';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export type Props = { title: string; description?: string; image?: string };
const { title, description, image } = Astro.props;
---
<html lang="en">
<head>
    <BaseHead title={title} description={description} image={image} />
    <link rel="alternate" type="application/rss+xml" title={ SITE_TITLE } href="/rss" />
</head>
<body class="font-sans font-medium text-slate-700 leading-7 tracking-wide">
<div class="flex flex-col justify-between min-h-screen max-w-3xl mx-auto px-4">
    <main>
        <Header />
        <slot />
        <Footer />
    </main>
</div>
</body>
</html>