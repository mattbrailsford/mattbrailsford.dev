---
import BaseHead from '../components/BaseHead.astro';

import { SITE_TITLE } from '../consts';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export type Props = { title: string; description?: string; image?: string };
const { title, description, image } = Astro.props;
---
<html lang="en">
<head>
    <BaseHead title={title} description={description} image={image} />
    <link rel="alternate" type="application/rss+xml" title={ SITE_TITLE } href="/rss" />
</head>
<body class="font-sans font-normal text-slate-700 tracking-normal">
    <Header />
    <main class="flex flex-col justify-between min-h-screen max-w-3xl mx-auto px-4">
        <slot />
    </main>
    <Footer />
</body>
</html>