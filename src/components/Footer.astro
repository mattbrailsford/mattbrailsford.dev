---
import { formatDate } from "../utils";
import SocialLinks from "./SocialLinks.astro";

const year = new Date().getFullYear()
const now = formatDate(new Date())
---
<footer class="mt-16 flex flex-col">
    <SocialLinks class="mb-8 mx-auto" />
    <div class="bg-black text-white text-center text-sm py-4 flex flex-col justify-center md:flex-row md:space-x-4 md:space-y-0">
        <span>Copyright © {year}.</span>
        <span>Static rendered on {now}.</span>
        <a target="_blank" class="underline transition-colors hover:text-pink-500" href="https://github.com/mattbrailsford/mattbrailsford.dev" rel="noopener">
            View source
        </a>
    </div>
</footer>